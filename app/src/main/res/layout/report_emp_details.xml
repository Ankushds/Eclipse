<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll1"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@id/imageView"
            android:layout_marginTop="20dp"
            android:layout_width="140dp"
            android:layout_height="150dp" />

    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:id="@id/ll2"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="20dp"
            android:layout_margin="3dp"
            android:id="@+id/txtViewer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="20dp"
            android:layout_below="@id/txtViewer"
            android:layout_margin="3dp"
            android:id="@+id/txtViewer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="20dp"
            android:layout_below="@id/txtViewer2"
            android:id="@+id/txtViewer3"
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="20dp"
            android:layout_below="@id/txtViewer3"
            android:id="@+id/txtViewer4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp" />

        <TextView
            android:textSize="20dp"
            android:layout_below="@id/txtViewer4"
            android:layout_margin="3dp"
            android:id="@+id/txtViewer5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="20dp"
            android:layout_below="@id/txtViewer5"
            android:id="@+id/txtViewer6"
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>
